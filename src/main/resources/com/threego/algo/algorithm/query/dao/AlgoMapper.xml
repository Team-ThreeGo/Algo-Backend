<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.threego.algo.algorithm.query.dao.AlgoMapper">
    <resultMap id="AlgoRoadmapResultMap" type="com.threego.algo.algorithm.command.domain.aggregate.AlgoRoadmap">
        <id property="id" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="order" column="ORDER"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="questionCount" column="QUESTION_COUNT"/>
    </resultMap>

    <select id="selectAllAlgoRoadmaps" resultMap="AlgoRoadmapResultMap">
        SELECT
               A.ID
             , A.TITLE
             , A.DESCRIPTION
             , A.`ORDER`
             , A.CREATED_AT
             , A.UPDATED_AT
             , A.QUESTION_COUNT
          FROM ALGO_ROADMAP A
         ORDER BY A.`ORDER`;
    </select>

    <select id="selectAllAlgoPosts" parameterType="string"
            resultType="com.threego.algo.algorithm.query.dto.AlgoPostSummaryResponseDTO">
        SELECT
               A.ID              AS id
             , A.MEMBER_ID       AS memberId
             , B.NICKNAME        AS nickname
             , A.TITLE           AS title
             , A.CREATED_AT      AS createdAt
             , A.UPDATED_AT      AS updatedAt
             , A.LIKE_COUNT      AS likeCount
             , A.COMMENT_COUNT   AS commentCount
         FROM ALGO_POST A
         LEFT JOIN MEMBER B
           ON A.MEMBER_ID = B.ID
        <where>
            <if test="keyword != null and keyword != ''">
                A.TITLE LIKE CONCAT('%', #{keyword}, '%') OR A.CONTENT LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
         ORDER BY A.ID DESC;
    </select>
</mapper>